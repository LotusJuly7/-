<com.hqk35.ChatLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >
    
    <com.hqk35.StatusBarInsetsLayout
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="@drawable/skin_header_bar_bg"
    	android:fitsSystemWindows="true">
    	<TextView
    	    android:id="@+id/title"
    	    android:layout_width="match_parent"
    	    android:layout_height="50dp"
    	    android:gravity="center"
    	    android:textColor="#fff"
    	    android:textSize="17dp" />
    	<TextView
    	    android:id="@+id/ivTitleBtnRightText"
    	    android:layout_width="52dp"
    	    android:layout_height="36dp"
    	    android:layout_gravity="right|center_vertical"
    	    android:paddingRight="2dp"
    	    android:paddingBottom="1dp"
    	    android:gravity="center"
    	    android:includeFontPadding="false"
    	    android:textColor="@color/skin_color_title_right_text"
    	    android:textSize="17dp"
    	    android:text="断开" />
    </com.hqk35.StatusBarInsetsLayout>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:background="#ebedf5">
        <LinearLayout
            android:id="@+id/listView1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="54dp"
	        android:layout_marginRight="54dp"
	        android:orientation="vertical">
	        
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#ebedf5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ebedf5"
        android:gravity="bottom">
        <EditText
            android:id="@+id/input"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="14dp"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@drawable/skin_aio_input_bg"
            android:includeFontPadding="false"
            android:textColor="#03081a"
            android:textSize="17dp"
            android:maxLines="6"
            android:inputType="textMultiLine" />
        <FrameLayout
            android:layout_width="78dp"
            android:layout_height="36dp">
            <Button
                android:id="@+id/fun_btn"
	            android:layout_width="60dp"
	            android:layout_height="34dp"
	            android:layout_marginLeft="4dp"
	            android:layout_marginTop="1dp"
	            android:background="@drawable/dj"
	            android:textColor="#ffffff"
	            android:textSize="14dp"
	            android:text="发送" />
        </FrameLayout>
        
    </LinearLayout>

    <com.hqk35.WindowInsetsLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ebedf5"
        android:fitsSystemWindows="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </com.hqk35.WindowInsetsLayout>

</com.hqk35.ChatLayout>
